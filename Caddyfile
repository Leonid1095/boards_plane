{$DOMAIN} {
    # Автоматический HTTPS с Let's Encrypt

    # Проксируем всё на frontend (который уже проксирует API на backend)
    reverse_proxy frontend:80

    # Логирование
    log {
        output stdout
        format json
    }

    # Сжатие
    encode gzip

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent XSS
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        # CSP
        Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: https:; img-src 'self' data: https: blob:; font-src 'self' data: https:;"
    }
}
