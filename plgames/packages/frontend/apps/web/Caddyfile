:80 {
    root * /usr/share/caddy
    encode gzip

    # Proxy API requests to backend
    reverse_proxy /api/* backend:3010
    reverse_proxy /graphql backend:3010
    reverse_proxy /socket.io/* backend:3010

    # Serve static files
    file_server

    # SPA fallback
    try_files {path} /index.html
}
